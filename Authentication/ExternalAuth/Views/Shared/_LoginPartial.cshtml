@using IdentityServer4.Extensions

@{ string name = null;
  if (!true.Equals(ViewData["signed-out"]))
  {
      name = Context.User?.GetDisplayName();
  } 
}

@if (!string.IsNullOrWhiteSpace(name))
{
    <ul class="nav navbar-nav mr-auto navbar-right">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown"> @name <b class="caret"></b></a>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
            </div>
        </li>
    </ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
</ul>}
