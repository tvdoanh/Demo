@model ExternalAuth.ViewModels.LogoutViewModel

@{
    ViewData["Title"] = "Đăng xuất";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center"><h3><b>@ViewData["Title"]</b></h3></div>

        <div class="card-body login-card-body">
            <p>Bạn muốn đăng xuất khỏi hệ thống?</p>
            <form asp-controller="Account" asp-action="Logout" method="post" class="form-horizontal">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Vâng</button>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>
